{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "target": "portalBucket",
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "functions",
      "runtime": "nodejs22",
      "region": "us-central1",
      "serviceAccount": "492156326175-compute@developer.gserviceaccount.com",
      "buildServiceAccount": "492156326175@cloudbuild.gserviceaccount.com",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**",
      "*.md",
      "*.rules",
      "*.json"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/admin",
        "destination": "/admin-uploader.html"
      },
      {
        "source": "/make-admin",
        "destination": "/make-admin.html"
      },
      {
        "source": "/dashboard",
        "destination": "/dashboard.html"
      },
      {
        "source": "/submit",
        "destination": "/submit-request.html"
      },
      {
        "source": "/register",
        "destination": "/register.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5001
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}