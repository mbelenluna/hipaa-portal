rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() { return request.auth != null; }
    
    // Check for admin role in Firestore users collection
    function isAdmin() {
      return exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Subidas del cliente (esto ya te funciona)
    match /user_uploads/{uid}/{docId}/{fileName=**} {
      allow write, read: if signedIn() && request.auth.uid == uid;
    }

    // ✅ Entregables: solo admin puede escribir
    match /deliverables/{docId}/{fileName=**} {
      allow write: if isAdmin();
      // lectura: dueño del proyecto o admin
      //allow read: if signedIn() && (get(/databases/(default)/documents/projectRequests/$(docId)).data.ownerUid == request.auth.uid|| isAdmin());
      
      // lectura: solo admin por ahora
      allow read: if isAdmin();
    }
  }
}