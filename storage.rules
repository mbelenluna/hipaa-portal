rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() { return request.auth != null; }

    // Check for admin role in Firestore users collection
    function isAdmin() {
      return request.auth != null &&
             firestore.exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Subidas del cliente (esto ya te funciona)
    match /user_uploads/{uid}/{docId}/{fileName=**} {
      allow write, read: if signedIn() && request.auth.uid == uid;
    }

    // âœ… Entregables: solo admin puede escribir (production-ready for multiple admins)
    match /deliverables/{docId}/{fileName=**} {
      allow write: if isAdmin();
      allow read: if isAdmin();
    }
  }
}